{
    "parser": "babel-eslint",
    "plugins": [
        "import",
        "json"
    ],
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "quotes": [
            "error",
            "double",
            {
                "avoidEscape": true
            }
        ],
        "indent": [
            "error",
            2
        ],
        "no-underscore-dangle": [
            "warn",
            {
                "allow": [
                    "_id"
                ]
            }
        ],
        "max-len": [
            "error",
            {
                "code": 256,
                "tabWidth": 2,
                "ignoreUrls": true
            }
        ],
        "linebreak-style": "off",
        "eslint linebreak-style": [
            "off",
            "error",
            "windows"
        ]
    }
}